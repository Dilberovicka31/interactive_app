{{! Form for editing a post }}
<div class="container text-center p-5">
  <div class="row justify-content-center">
    <div class="col-md-6 mb-4">
      <div
        class="card minty image-container"
        style="width: 100%; max-width: 500px; height: 300px;"
      >
        <div class="card-body" style="overflow-y: auto; max-height: 200px;">
          
          <form id="editPostForm">
            <div class="form-group">
              <label for="title">Title</label>
              <input
                type="text"
                class="form-control"
                id="title"
                name="title"
                value="{{post.title}}"
              />
            </div>
            <div class="form-group">
              <label for="body">Text</label>
              <textarea
                class="form-control"
                id="body"
                name="body"
                rows="3"
              >{{post.body}}</textarea>
            </div>
            <button type="submit" class="btn editButton">Edit</button>
           <i
            class="fa-regular fa-trash-can position-absolute bottom-0 end-0 mb-2 deleteBtn p-2"
          ></i>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/editPost.js"></script>